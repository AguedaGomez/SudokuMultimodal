<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" xml:lang="es-ES" mode="voice" root="MainRule" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0" >

  <rule id="MainRule" scope="public">

    <item repeat="0-1">
      <one-of>
        <item> pon un </item>
        <item> poner un </item>
      </one-of>
    </item>
    <item>
      <ruleref uri="#Numero"></ruleref>
      <tag> out.Numero=rules.Numero</tag>
    </item>
    <item repeat="0-1">
      <one-of>
        <item>
          en la fila <ruleref uri="#Fila"></ruleref> <tag> out.Fila=rules.Fila</tag> columna <ruleref uri="#Columna"></ruleref> <tag> out.Columna=rules.Columna</tag>
        </item>
        <item>
          en la posición <ruleref uri="#Fila"></ruleref> <tag> out.Fila=rules.Fila</tag> <ruleref uri="#Columna"></ruleref> <tag> out.Columna=rules.Columna</tag>
        </item>
        <item>
          en <ruleref uri="#Fila"></ruleref> <tag> out.Fila=rules.Fila</tag> <ruleref uri="#Columna"></ruleref> <tag> out.Columna=rules.Columna</tag>
        </item>
      </one-of>
    </item>
  </rule>

  <rule id="Fila" scope="public">
    <item>
      <ruleref uri="#Numero"/>
      <tag> out = rules.Numero; </tag>
    </item>
  </rule>

  <rule id="Columna" scope="public">
    <item>
      <ruleref uri="#Numero"/>
      <tag> out = rules.Numero; </tag>
    </item>
  </rule>

  <rule id="Numero" scope="public">
    <one-of>
      <item>
        cero <tag> out = "0"</tag>
      </item>
      <item>
        uno <tag> out = "1"</tag>
      </item>
      <item>
        dos <tag> out = "2"</tag>
      </item>
      <item>
        tres <tag> out = "3"</tag>
      </item>
      <item>
        cuatro <tag> out = "4"</tag>
      </item>
      <item>
        cinco <tag> out = "5"</tag>
      </item>
      <item>
        seis <tag> out = "6"</tag>
      </item>
      <item>
        siete <tag> out = "7"</tag>
      </item>
      <item>
        ocho <tag> out = "8"</tag>
      </item>
      <item>
        nueve <tag> out = "9"</tag>
      </item>
    </one-of>
  </rule>
</grammar>