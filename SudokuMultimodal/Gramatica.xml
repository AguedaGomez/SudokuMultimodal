<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" xml:lang="es-ES" mode="voice" root="MainRule" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0" >

  <rule id="MainRule" scope="public">
    <item repeat="0-1">
      <one-of>
        <item> poner </item>
        <item> pon </item>
      </one-of>
    </item>
    <item repeat="0-1"> un </item>
    <ruleref uri="#Numero"/>
    <tag>out.Numero=rules.Numero;</tag>
    <tag> out.Fila="-1"</tag>
    <tag> out.Columna="-1"</tag>
    <item repeat="0-1">
      <item> en </item>
      <item repeat="0-1">
        <one-of>
          <item> la posicion </item>
          <item> la fila </item>
        </one-of>
      </item>
      <ruleref uri="#Numero"/>
      <tag> out.Fila=rules.Numero</tag>
      <item repeat="0-1"> columna </item>
      <ruleref uri="#Numero"/>
      <tag> out.Columna=rules.Numero</tag>
    </item>
  </rule>

  <rule id="Numero" scope="public">
    <one-of>
      <item>
        uno <tag> out = "1";</tag>
      </item>
      <item>
        dos <tag> out = "2";</tag>
      </item>
      <item>
        tres <tag> out = "3";</tag>
      </item>
      <item>
        cuatro <tag> out = "4";</tag>
      </item>
      <item>
        cinco <tag> out = "5";</tag>
      </item>
      <item>
        seis <tag> out = "6";</tag>
      </item>
      <item>
        siete <tag> out = "7";</tag>
      </item>
      <item>
        ocho <tag> out = "8";</tag>
      </item>
      <item>
        nueve <tag> out = "9";</tag>
      </item>
    </one-of>
  </rule>
</grammar>